#include <iostream>


using namespace std;
class Bucket{
    public:
    int volume, used, v;
    
    ~Bucket(){cout << "Ведро пустое вновь.";};
    Bucket(int a, int b) {
        volume = a;
        used = b;
    };
    
    int fill(int v){
        if (v < (volume - used)){
            used = used + v;
        } else {
            used = (used + v) - volume;
        }
        return volume;
    };
    
    int flush(){
        return used = 0;
    };
};

int main(){
    Bucket test_01(12, 3);
    cout << "1) " << test_01.volume << ", " << test_01.used << "\n";

    int rest = test_01.fill(14);
    cout << "2) " << test_01.used << ", " << rest << "\n";
    
    test_01.flush();
    rest = test_01.fill(8);
    cout << "3) " << test_01.used << ", " << rest << "\n";
}
