#include <iostream>
using namespace std;

class Bucket{
    public:
    int volume, used, vlivaem, v;
    
    int fill(){
        if ((volume - used) < vlivaem) {
            cout << "Ведро полное! \nУ тебя осталось " << vlivaem - (volume - used) << " литров \n";
            flush();
        } else {
            cout << "Ведро заполнено на " << used + vlivaem << " литров \n";
        }
        return used;
    }
    
    int flush() {return 3;}
    
    
    ~Bucket(){cout << "Вылили лишнюю воду \nВедро вновь заполнено на треть";};
    Bucket(int v = 0) {
        volume = 12;
        used = 3;
        vlivaem = v;
    };
};

int main() {
    int v;
    cout << "Сколько литров хотите налить? \n";
    cin >> v;
    Bucket ODIN(v);
    cout << ODIN.fill();
    return 0;
}
