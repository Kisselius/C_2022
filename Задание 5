#include <iostream>
#include <algorithm>
using namespace std;
double SquaredSum(double a, double b);
void Sortirovka(int massiv[]);

int main()
{
    double a, b;
    cout << "Введите два дробных числа: ";
    cin >> a;
    cin >> b;
    int massiv[10];
    cout << "А теперь введите 10 целых чисел: ";
    for (int p=0; p<10; p++){
	    cin >> massiv[p];}
   SquaredSum(a, b);
   Sortirovka(massiv);
   return 0;
}

//Первая функция
double SquaredSum(double a, double b) {
    cout << "Квадрат суммы дробных чисел: " << (a+b)*(a+b) << "\n";
    return 0;
}

//Вторая функция
void Sortirovka(int massiv[]) {
    sort(massiv, massiv + 10);
    cout << "Вот ваш обратный порядок: ";
    for (int i=9; i>=0; i--){
    cout << massiv[i];
    if (i != 0) {
        cout << ", ";
    } else {
        cout << ".";
    }
    }
}
