#include <iostream>

using namespace std;

int main()
{
    cout << "ПЕРВОЕ ЗАДАНИЕ. \n";
    int raz = 0;
    while (raz < 101){
        if (raz % 3 == 0){
            cout << "Число, делящееся на 3: " << raz << "\n";
        }
        raz++;
    }
    cout << "\n";
    cout << "ВТОРОЕ ЗАДАНИЕ. \n";
    int dva = 1;
    int summa = 0;
    do {
        if (dva % 7 == 0){
            summa = summa + dva;
        }
        dva = dva + 4;
    } while (dva < 1001);
    cout << "Сумма всех чисел, делящихся на 7: " << summa;
    return 0;
}
